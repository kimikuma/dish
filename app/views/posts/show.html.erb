<div class="container">
  <div class="row">
    <div class="col-md-5">
<h1 class="mt-3"><i class="fa-solid fa-eye"></i></h1>
<i class="fa-solid fa-users-viewfinder"></i> <%=@post.view_count %>
<table class="table table-border-bottom">
  <tr>
    <th>name</th>
  <td><%=@post.name %></td>
  </tr>
  <tr>
  <th>caption</th>
  <td>
<%=@post.caption %></td>
</tr>
<tr>
  <th>image</th>
<td><%=image_tag @post.get_image(100,100) %>
<p><span id="favorite<%=@post.id %>"><%=render "favorites/favorite",post: @post %></span>
<i class="fa-regular fa-pen-to-square"></i><span class="count"><%=@post.comments.count %></span></p></td>
</tr>
</table>
<div id="comment<%=@post.id %>">
<%=render "comments/comment",post: @post %>
</div>
<%=render "comments/form",comment: @comment,post: @post %>
</div>

<div class="col-md-4 offset-md-1">
  <h1><%=image_tag @post.user.get_profile_image(100,100) %>
  <%=@post.user.name %></h1>
  <p><%=@post.user.introduction %>
   <%=link_to user_path(@post.user_id),class: "btn btn-outline-info" do  %>
  <i class="fa-regular fa-circle-user"></i>
  <% end %>
  </p>

</div>
</div>
</div>
