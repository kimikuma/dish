<h1><i class="fa-solid fa-plus"></i></h1>
<%=form_with model:post do |f| %>
<h7 class="mt-3">name</h7>
<p><%=f.text_field:name %></p>
<h7 class="mt-3">caption</h7>
<p><%=f.text_area:caption %></p>
<h7 class="mt-3">image</h7>
<p><%=f.file_field:image,accept: "image/*" %></p>
<p><%=f.submit "投稿",class: "btn btn-outline-secondary mt-3" %></p>
<% end %>