<div class="container">
<div class="row">
<div class="col-md-5">
<h1><i class="fa-solid fa-user-gear"></i></h1>
<%=form_with model:@user,url: user_path(@user),method: :patch do |f|%>
<h4 class="mt-3">name</h4>
<p><%=f.text_field:name %></p>
<h4 class="mt-3">introduction</h4>
<p><%=f.text_area:introduction %></p>
<h4 class="mt-3">image</h4>
<p><%=f.file_field:profile_image,accept: "image/*" %></p>
<p><%=f.submit "update",class: "mt-3" %></p>
<% end %>
</div>
</div>
</div>